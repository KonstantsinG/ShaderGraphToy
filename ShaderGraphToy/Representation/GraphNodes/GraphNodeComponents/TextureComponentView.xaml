<UserControl x:Class="ShaderGraphToy.Representation.GraphNodes.GraphNodeComponents.TextureComponentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShaderGraphToy.Representation.GraphNodes.GraphNodeComponents"
             xmlns:gn="clr-namespace:ShaderGraphToy.Representation.GraphNodes"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="230">
    
    <StackPanel>

        <Image Source="pack://application:,,,/ShaderGraphToy;component/Resources/Images/texture_img.png"
               MaxWidth="200" MaxHeight="200" Margin="5" x:Name="imgViewer"
               MouseLeftButtonDown="ImgViewer_MouseLeftButtonDown"/>

        <WrapPanel Margin="0,10,0,0">
            <gn:NodesConnector HorizontalAlignment="Left" Margin="0,0,0,5" x:Name="conn"/>
            
            <TextBlock Text="Текстурные координаты" TextWrapping="Wrap" Height="15" Margin="5,0,0,5"
                       Style="{StaticResource GrayTextBlock}"/>
        </WrapPanel>

        <TextBlock Text="Упаковка текстуры" FontWeight="Bold" Height="15" Margin="0,10,0,5"
                   Style="{StaticResource GrayTextBlock}"/>
        
        <TextBlock Text="По ширине" Height="15" Margin="5,0,0,5"
                   Style="{StaticResource GrayTextBlock}"/>
        
        <ComboBox SelectedIndex="{Binding Path=Model.WrapS, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  Margin="0,0,5,5" Width="170" HorizontalAlignment="Left">
            <ComboBox.Items>
                <ComboBoxItem Content="Повторение"/>
                <ComboBoxItem Content="Зеркальное повторение"/>
                <ComboBoxItem Content="Прижать к краю"/>
                <ComboBoxItem Content="Прижать к границам"/>
            </ComboBox.Items>
        </ComboBox>

        <TextBlock Text="По высоте" Height="15" Margin="5,0,0,5"
                   Style="{StaticResource GrayTextBlock}"/>
        
        <ComboBox SelectedIndex="{Binding Path=Model.WrapT, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  Margin="0,0,5,5" Width="170" HorizontalAlignment="Left">
            <ComboBox.Items>
                <ComboBoxItem Content="Повторение"/>
                <ComboBoxItem Content="Зеркальное повторение"/>
                <ComboBoxItem Content="Прижать к краю"/>
                <ComboBoxItem Content="Прижать к границам"/>
            </ComboBox.Items>
        </ComboBox>


        <TextBlock Text="Фильтрация текстуры" FontWeight="Bold" Height="15" Margin="0,10,0,5"
                   Style="{StaticResource GrayTextBlock}"/>

        <TextBlock Text="При увеличении" Height="15" Margin="5,0,0,5"
                   Style="{StaticResource GrayTextBlock}"/>
        
        <ComboBox SelectedIndex="{Binding Path=Model.FilterMag, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  Margin="0,0,5,5" Width="170" HorizontalAlignment="Left">
            <ComboBox.Items>
                <ComboBoxItem Content="Ближайший сосед"/>
                <ComboBoxItem Content="Линейная"/>
            </ComboBox.Items>
        </ComboBox>

        <TextBlock Text="При уменьшении" Height="15" Margin="5,0,0,5"
                   Style="{StaticResource GrayTextBlock}"/>
        
        <ComboBox SelectedIndex="{Binding Path=Model.FilterMin, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                  Margin="0,0,5,5" Width="170" HorizontalAlignment="Left">
            <ComboBox.Items>
                <ComboBoxItem Content="Ближайший сосед"/>
                <ComboBoxItem Content="Линейная"/>
            </ComboBox.Items>
        </ComboBox>

    </StackPanel>
    
</UserControl>
